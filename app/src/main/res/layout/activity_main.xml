<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.l400.courtcounter.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"


    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/teamAa"

        android:orientation="vertical"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="left"
        android:text="Team A"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teama"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="left"
        android:text="0"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="5dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/threep"
       android:onClick="three"
        android:layout_gravity="left"
        android:text="+3 Point"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="5dp"
        android:background="#d26a24"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/twop"
        android:layout_gravity="left"
        android:text="+2 Point"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:onClick="two"
        android:textStyle="bold"
        android:padding="5dp"
        android:background="#d26a24"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Freethrow"
        android:layout_gravity="left"
        android:text="free throw"
        android:onClick="one"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="5dp"
        android:background="#d26a24"
        />
    </LinearLayout>


    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="100dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:layout_marginLeft="5dp"
       android:layout_toRightOf="@+id/teamAa">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:text="Team B"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teamb"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:text="0"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="5dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/threeb"
            android:onClick="threeb"
            android:layout_gravity="left"
            android:text="+3 Point"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:background="#d26a24"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/twopb"
            android:layout_gravity="left"
            android:text="+2 Point"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:onClick="twob"
            android:textStyle="bold"
            android:padding="5dp"
            android:background="#d26a24"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Freethrowb"
            android:layout_gravity="left"
            android:text="free throw"
            android:onClick="oneb"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="5dp"

            android:background="#d26a24"

            />

    </LinearLayout>

</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"


        android:text="Reset"
        android:textSize="25sp"
        android:textStyle="bold"
        android:onClick="reset"

        android:background="#d26a24" />

</RelativeLayout>
